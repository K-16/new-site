// GLOBAL //

html, body
	font-family PT Sans, Open Sans, Arial, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Calibri,Helvetica, sans-serif
	font-size 1.15em
	height 100%
	margin 0
	padding 0

body
	display flex
	flex-direction column

#root
	flex-grow 1
	margin 2.5em

#container
	height 100%

main
	height 100%

#preloader
	position fixed
	top 0
	left 0
	width 100%
	height 100%

.preloader
	display flex
	width 100%
	flex-direction column
	align-items center
	justify-content center
	margin-top 10.47em
	margin-bottom 10.47em

.hidden
	display none

.q-container
	display flex
	flex-direction row
	margin-bottom 1em

.q-container q
	margin-left 1em
	margin-right 1em

.q-left, .q-right
	color #214560
	font-size 400%
	line-height .3
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

.q-left
	align-self flex-start

.q-right
	align-self flex-end

code
	font-size 125%

.dialog-container
	display flex
	flex-direction row

.dialog-left
	align-self stretch
	background #214560
	width 0.3em
	margin-right 1em

.dialog-from
	text-align right
	font-style italic
	color #222

// NAV //

nav
	display flex
	flex-direction row
	align-items center
	position fixed
	top 0
	z-index 9
	width 100%
	padding-left 0.5em
	padding-right 0.5em
	background white
	transition box-shadow 0.1s ease-in-out

nav.shadowed
	box-shadow 0 0 0.15em rgba(0, 0, 0, 0.2)

nav ul
	display flex
	width 100%
	list-style none
	justify-content center

nav ul > li:not(:last-child):after
		margin-left 0.5em
		content "|"
		color rgba(0,0,0, 0.13)

nav li
	display inline-block
	margin-right 0.5em
	
nav a
	color #214560
	transition color 0.3s ease-in-out
	&:hover
		color #214560aa


nav .logo
	width 10em
	height 3.31em

// MAIN //

.why-k16
	float right
	width 12em
	padding 0.4em
	margin 0.3em
	border 2px solid #214560aa
	border-radius 4px
	box-shadow 0px 2px 3px 0px rgba(#214560, 0.21)

.slick-arrow, .slick-arrow:before, .slick-arrow:after
	display none !important

.slick-ul-list
	max-width 35em

.slick-ul-list-container
	display flex
	justify-content center
	margin 0
	padding 0
	
// PHOTOS //

.albums
	list-style none
	display block

.album
	display inline-block
	text-align center
	margin 10px

.thumb
	display inline-flex
	flex-direction column
	align-items center
	justify-content center
	width 100px
	height 100px
	overflow hidden
	border-radius 100%

.thumb-container
	display block
	width 100px
	height 100px
	transition transform 0.3s ease-in-out
	&:hover
		transform scale(1.2)

.thumb-image
	display block
	min-width 100px
	min-height 100px
	width auto
	height auto

.photos-viewer
	display none

.lg-outer .lg-thumb-item.active, .lg-outer .lg-thumb-item:hover
	border-color #214560 !important

.sort-method-container, .sort-link-container
	display inline-block
	border 1px solid #214560
	border-radius 3px
	overflow hidden
	
.sort-method, .sort-link
	transition background 0.1s ease-in-out, color 0.1s ease-in-out
	display inline-block
	padding 5px
	color black
	text-decoration none

.sort-method.checked, .sort-link.checked
	background #214560
	color white

// NEWS //

.news
	margin 0
	padding 0
	width 100%
	height 100%
	display flex
	flex-flow column

.news-title
	flex 0 1 auto

.news-container
	flex 0 1 auto
	margin 0
	padding 0
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
