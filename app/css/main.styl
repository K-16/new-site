// GLOBAL //

html, body
	font-family PT Sans, Open Sans, Arial, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Calibri,Helvetica, sans-serif
	font-size 1.15em
	height 100%
	margin 0
	padding 0

body
	display flex
	flex-direction column

#root
	flex-grow 1
	margin 2.5em
	margin-left 8em
	margin-right 8em

#container
	height 100%

main
	height 100%

#preloader
	position fixed
	top 0
	left 0
	width 100%
	height 100%

.preloader
	display flex
	width 100%
	flex-direction column
	align-items center
	justify-content center
	margin-top 10.47em
	margin-bottom 10.47em

.hidden
	display none

.q-container
	display flex
	flex-direction row
	width 100%
	margin-bottom 1em

.q-container q
	flex-grow 1
	margin-left 1em
	margin-right 1em

.q-left, .q-right
	color #214560
	font-size 400%
	line-height .3
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

.q-left
	align-self flex-start

.q-right
	align-self flex-end

code
	font-size 125%

.dialog-container
	display flex
	flex-direction row

.dialog-left
	align-self stretch
	background #214560
	width 0.3em
	margin-right 1em

.dialog-from
	text-align right
	font-style italic
	color #222

.i
	font-style italic

// NAV //

nav
	position fixed
	top 0
	z-index 9
	width 100%
	padding-left 0.5em
	padding-right 0.5em
	background white
	transition box-shadow 0.1s ease-in-out

nav.shadowed
	box-shadow 0 0 0.15em rgba(0, 0, 0, 0.2)

nav ul
	display inline-flex
	list-style none
	justify-content center
	float right
	margin-right 0.8em

nav ul > li:not(:last-child):after
	margin-left 0.5em
	content "|"
	color rgba(0,0,0, 0.13)

nav li
	display inline-block
	margin-right 0.5em
	font-size 0.9em
	
nav .logo
	display inline-block
	width 10em
	height 3.31em
	float left

a
	color #214560
	transition color 0.3s ease-in-out
	&:hover
		color #214560aa

b
	font-weight bold

.right
	float right
	width 12em
	padding 0.4em
	margin-top 0.3em
	margin-left 0.7em
	border 2px solid #214560aa
	border-radius 4px
	box-shadow 0px 2px 3px 0px rgba(#214560, 0.21)

div.hr
	width 100%
	height 2px
	background #214560

// MAIN //

.slick-slide img
	margin-left 0.1em
	margin-right 0.1em
	height 25em

// PHOTOS //

.albums
	list-style none
	display block

.album
	display inline-block
	text-align center
	margin 10px

.thumb
	display inline-flex
	flex-direction column
	align-items center
	justify-content center
	width 4.5em
	height 4.5em
	overflow hidden
	border-radius 100%

.thumb-container
	display block
	width 4.5em
	height 4.5em
	transition transform 0.3s ease-in-out
	&:hover
		transform scale(1.2)

.thumb-image
	display block
	min-width 100px
	min-height 100px
	width auto
	height auto

.photos-viewer
	display none

.lg-outer .lg-thumb-item.active, .lg-outer .lg-thumb-item:hover
	border-color #214560 !important

.sort-method-container, .sort-link-container
	display inline-block
	border 1px solid #214560
	border-radius 3px
	overflow hidden
	
.sort-method, .sort-link
	transition background 0.1s ease-in-out, color 0.1s ease-in-out
	display inline-block
	padding 5px
	color black
	text-decoration none

.sort-method.checked, .sort-link.checked
	background #214560
	color white

// NEWS //

.news
	margin 0
	padding 0
	width 100%
	height 100%
	display flex
	flex-flow column

.news-title
	flex 0 1 auto

.news-container
	flex 0 1 auto
	margin 0
	padding 0
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center

// CONTACTS //

.gmap
	width 100%
	height 25em

// MOBILE //

.burger-list
	display none

@media (max-width: 1180px)
	nav ul
		position fixed
		top 0.7em
		left 100%
		background white
		display block
		width 100%
		font-size 1.3em
		transition left 0.03s ease-in-out
		padding-left 1em
		padding-bottom 1em
		padding-top 0
		padding-right 0
		box-shadow 0 0.16em 0.15em rgba(0, 0, 0, 0.2)

	nav ul.showed
		left 0

	nav ul li
		display block
	
	nav ul > li:not(:last-child):after
		display none

	nav .logo
		width 7em
		height 2.317em	

	html, body
		font-size 1em
		overflow-x hidden

	.right
		display none

	.burger-list
		display block
		background none
		border none
		float right
		font-size 1.5em
		color #555
		padding 0
		margin 0
		text-align right
		flex 1
		margin-right 1.3em	
		outline none
		margin-top 0.05em

	#root
		margin 0.7em
		margin-top 2em

	.thumb-container, .thumb
		width 5em
		height 5em

@media (max-width: 360px)
	.albums 
		display flex
		flex-direction column
		justify-content center
		width 100%
		margin 0
		padding 0

